<section class="container-fluid my-4">
    <div class="row"></div>
</section>

<section id = "contactForm" class="py-5">
    <div class="row">
        <div class = "col-xl-4 col-md-3 col-1"></div>
        <div class = "col-xl-4 col-md-6 col-10">
            <div id = "form-container" class = "row container shadow-lg p-3 mb-5 bg-body rounded mr-0">
                <form method = "POST" action = "/" class="contact-form">
                    <h3>Contact Us</h3>
                        <div class="mb-3">
                        <label for="name" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="name" placeholder = "John Doe" aria-describedby="name" required name="name">  
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" placeholder = "example@gmail.com" required name="email">
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Type your message here</label>
                        <textarea cols="50" rows="4" class = "form-control" id="message" name="message" required placeholder = "Type here..."></textarea>
                    </div>
                    <div class = "text-center">
                        <button type="submit" class="btn btn-primary color-primary" id = "submitButton" value="Send Message">Submit</button>
                    </div>
                </form>
            </div>
        </div>
        <div class = "col-xl-4 col-md-3 col-1"></div>
    </div>
</section>
